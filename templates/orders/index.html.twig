{% extends 'frontbase.html.twig' %}

{% block title %}  ShopCart  {% endblock %}
{% block sidebar %}  {{ include ('home/usersidebar.html.twig') }}  {% endblock %}

{% block content %}
<div class="span9">

    <div class="row">

        <h1>orders</h1>
        {{ include ('home/messages.html.twig') }}

    <table class="table">
        <thead>
            <tr>

                <th>Name</th>
                <th>Amount</th>
                <th>City</th>
                <th>Phone</th>
                <th>Shipinfo</th>
                <th>date</th>
                <th>status</th>
                <th>action</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>

                <td>{{ order.name }}</td>
                <td>{{ order.amount }}</td>
                <td>{{ order.city }}</td>
                <td>{{ order.phone }}</td>
                <td>{{ order.shipinfo }}</td>
                <td>tarih</td>
                <td>{{ order.status }}</td>
                <td>
                    <a href="{{ path('orders_show', {'id': order.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
</div>
    <div class="row"></div>
{% endblock %}

