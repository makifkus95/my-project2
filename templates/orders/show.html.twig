{% extends 'frontbase.html.twig' %}

{% block title %}  ShopCart  {% endblock %}
{% block sidebar %}  {{ include ('home/usersidebar.html.twig') }}  {% endblock %}

{% block content %}
    <div class="span9">
        <ul class="breadcrumb">
            <li><a href="{{ path('home') }}">Home</a> <span class="divider">/</span></li>

        </ul>
        <div class="row">

            <h1>orders</h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Ürün</th>
                    <td>{{ order.id }}</td>
                </tr>
                <tr>
                    <th>Userid</th>
                    <td>{{ order.userid }}</td>
                </tr>
                <tr>
                    <th>Amount</th>
                    <td>{{ order.amount }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ order.name }}</td>
                </tr>
                <tr>
                    <th>Adress</th>
                    <td>{{ order.adress }}</td>
                </tr>
                <tr>
                    <th>City</th>
                    <td>{{ order.city }}</td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td>{{ order.phone }}</td>
                </tr>
                <tr>
                    <th>Shipinfo</th>
                    <td>{{ order.shipinfo }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ order.status }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row"></div>
{% endblock %}

