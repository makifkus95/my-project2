{% extends 'adminbase.html.twig' %}

{% block title %}üye düzenleme{% endblock %}

{% block content %}
<div id="page-wrapper">
    <div class="row">
        <!-- Page Header -->
        <div class="col-lg-12">
            <h1 class="page-header">Üye düzenleme</h1>
        </div>
        <!--End Page Header -->
        
        <!-- kendi getirdiğim tablo -->
        <div class="panel panel-default"  align="left">

            <form method="post">

                <div>
                    <label for="exampleInputEmail2">Adı Soyadı:</label>
                    <div>
                        <input class="form-control" value="{{ user.name }}" id="disabledInput" name="user[name]" type="text">
                    </div>
                </div>
                <div >
                    <label for="exampleInputEmail2" >Email:</label>
                    <div >
                        <input class="form-control" value="{{ user.email }}" id="disabledInput" name="user[email]" type="email" >
                    </div>
                </div>
                <div >
                    <label for="exampleInputPassword2" >Şifre:</label>
                    <div>
                        <input class="form-control" value="{{user.password }}" id="disabledInput" name="user[password]" type="password" >
                    </div>
                </div>
                <div>
                    <label for="exampleInputPassword2" >Türü:</label>
                    <div >
                        <select id="disabledSelect" class="form-control" name="user[roles]" >
                            {% for item in user.roles %}
                                <option selected>{{ item }}</option>
                            {% endfor %}

                            <option>ROLE_ADMIN</option>
                            <option>ROLE_USER</option>
                            <option>ROLE_POWER</option>
                            <option>ROLE_MEMBER</option>
                        </select>

                    </div>
                </div>
                <div>
                    <label for="exampleInputPassword2" >Aktiflik Durumu:</label>
                    <div >
                        <select id="disabledSelect" class="form-control" name="user[status]">
                            <option>{{ user.status }}</option>
                            <option>True</option>
                            <option>False</option>
                        </select>

                    </div>
                </div>
                <button type="submit" class="btn btn-success mr-2">Kaydet</button>
                <button class="btn btn-light">İptal</button>
            </form>


        </div>
        
    </div>
</div>
{% endblock %}