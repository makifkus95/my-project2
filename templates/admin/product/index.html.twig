{% extends 'adminbase.html.twig' %}

{% block title %}Product listesi{% endblock %}

{% block content %}
    <div id="page-wrapper">
        <div class="row">
            <!-- Page Header -->
            <div class="col-lg-12">
                <h1 class="page-header">Product Listesi
                    <small><a href="{{ path('admin_product_new') }}" class="btn btn-primary">Product Ekleme</a></small>
                </h1>
            </div>
            <!--End Page Header -->

            <!-- kendi getirdiğim tablo -->
            <div class="panel panel-default">

                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Title</th>

                                <th>Amount</th>
                                <th>Pprice</th>
                                <th>Sprice</th>
                                <th>Min</th>

                                <th>image</th>
                                <th>galeri</th>

                                <th>Categoryid</th>
                                <th>Userid</th>
                                <th>Status</th>
                                <th>Göster</th>
                                <th>Düzenle</th>
                                <th>Sil</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for product in products %}
                                <tr>
                                    <!--<th><img src="{{ url('admin') }}/img/image.png" height="40"></th>-->
                                    <td>{{ product.id }}</td>
                                    <td>{{ product.title }}</td>

                                    <td>{{ product.amount }}</td>
                                    <td>{{ product.pprice }}</td>
                                    <td>{{ product.sprice }}</td>
                                    <td>{{ product.min }}</td>

                                    <td>
                                        <a href="javascript:openWin('{{ path('admin_product_iedit', {'id': product.id  }) }}','','toolbar=no,location?no,directories=0,status=no,top=100,left=200,menuBar=no,scrollBars=no,resizable=no,width=600,height=500');">
                                        {% if product.image == null %}
                                        Add Image
                                        {% else %}
                                                <img src="{{ asset('uploads') }}/images/{{ product.image }}" height="40">
                                        {% endif %}
                                        </a>
                                    </td>
                                    <td>
                                        <a href="javascript:openWin('{{ path('admin_images_new', {'pid': product.id  }) }}','','toolbar=no,location?no,directories=0,status=no,top=100,left=200,menuBar=no,scrollBars=no,resizable=no,width=1000,height=800');">
                                        <img src="{{ url('admin') }}/img/image.png" height="40">
                                        </a>
                                    </td>

                                    <td>{{ product.categoryid }}</td>
                                    <th>Userid</th>
                                    <td>{{ product.status }}</td>

                                    <td><a href="{{ path('admin_product_show', {'id': product.id}) }}">Göster</a></td>
                                    <td><a href="{{ path('admin_product_edit', {'id': product.id}) }}">Düzenle</a></td>
                                    <td>{{ include('admin/product/_delete_form.html.twig') }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="18">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                        <a href="{{ path('admin_product_new') }}">Create new</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}

