{% extends 'frontbase.html.twig' %}

{% block title %}{{ data[0].title }}!{% endblock %}
{% block keywords %}{{ data[0].keywords }}!{% endblock %}
{% block description %}{{ data[0].description }}!{% endblock %}
{% block sidebar %}  {{ include ('home/sidebar.html.twig') }} {% endblock %}

{% block content %}
<div id="mainBody">
    <div class="container">
        <div class="row">
    <div class="span9">

        <h4>{{ data[0].title }} </h4>
        <ul class="thumbnails">

            {% for rs in products %}
            <li class="span3">
                <div class="thumbnail">
                    <a href="/product/{{ rs.id }}"><img src="{{ asset('uploads') }}/images/{{ rs.image }}" alt=""></a>
                    <div class="caption">

                        <p>{{ rs.title }}</p>

                        <h4 style="text-align:center"><a class="btn" href="product_details.html"> <i class="icon-zoom-in"></i></a> <a class="btn" href="#">Add to <i class="icon-shopping-cart"></i></a> <a class="btn btn-primary" href="#">{{ rs.sprice }}</a></h4>
                    </div>
                </div>
            </li>

            {% endfor %}

        </ul>

    </div></div></div></div>
{% endblock %}
